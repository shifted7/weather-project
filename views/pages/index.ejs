      <h1>Truthy Weather</h1>
      <div class="search">
        <button id="getWeatherButton">Get Weather</button>
        <input name="getWeatherInput" type="text" placeholder="Enter a city">
      </div>
      <aside>
        <ul id="savedCities">
          <% cities.forEach(city => { %>
          <li><span><%= city.city_name %></span>
          <button class='query' id="query"> Search </button>
          <button class='delete' id="delete"> Delete </button></li>
          <% }); %>
        </ul>
      </aside>
  </header>
